  <content>
    <references>
      <reference>
        <modelIdentCode>S1000DBIKE</modelIdentCode>
        <systemDiffCode>AAA</systemDiffCode>
        <systemCode>DA2</systemCode>
        <subSystemCode>2</subSystemCode>
        <subSubSystemCode>0</subSubSystemCode>
        <assyCode>00</assyCode>
