  <content>
    <procedure>
      <preliminaryRequirements>
        <requiredConditions>
          <condition>The bicycle must be placed in a work stand.</condition>
          <condition>The handlebar grips must be removed before starting the procedure.</condition>
        </requiredConditions>
        <requiredPersonnel>
          <person>
            <role>Mechanic</role>
            <estimatedTime_NotSpecified/>
          </person>
        </requiredPersonnel>
        <requiredSupportEquipment>
          <equipment>
            <description>Set of Allen wrenches</description>
            <partNumber>KZ666, BSK-TLST-001-13</partNumber>
            <quantity>1</quantity>
            <unitOfMeasure>EA</unitOfMeasure>
          </equipment>
          <equipment>
            <description>Extra firm hold hairspray</description>
            <partNumber>HS111, HSP-D001</partNumber>
